{
    "manifest_version": 3,
    "permissions": ["cookies", "storage"],
    "host_permissions": ["http://localhost/*"],
    "name": "RRPM",
    "description": "Chez vous, au travail, n'importe où, RRPM sécurise mots de passe, clés d'accès et informations sensibles",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_width": 800,
        "default_height": 600
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
      }
}
