{
    "manifest_version": 3,
    "permissions": ["cookies", "storage"],
    "host_permissions": ["https://rrpm.site/*"],
    "name": "RRPM",
    "description": "A secure an reliable password manager, made for the people, by the people",
    "version": "1.0",
    "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "action": {
        "default_popup": "index.html",
        "default_width": 800,
        "default_height": 600
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
      },
    "icons": {
        "16": "RRPM.png",
        "32": "RRPM.png",
        "48": "RRPM.png",
        "128": "RRPM.png"
    }
}
