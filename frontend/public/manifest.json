{
    "manifest_version": 3,
    "permissions": ["cookies", "storage","tabs"],
    "host_permissions": ["https://rrpm.site/*"],
    "name": "RRPM",
    "description": "Chez vous, au travail, n'importe où, RRPM sécurise mots de passe, clés d'accès et informations sensibles",
    "version": "1.0",
    "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "action": {
        "default_popup": "index.html",
        "default_width": 800,
        "default_height": 600
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
      }
}
